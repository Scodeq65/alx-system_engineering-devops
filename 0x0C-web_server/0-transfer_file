#!/usr/bin/env bash

# Function to display usage message
display_usage() {
    echo "Usage: $0 PATH_TO_FILE IP USERNAME PATH_TO_SSH_KEY"
    exit 1
}

# Check if all 4 parameters are provided
if [ "$#" -ne 4 ]; then
    display_usage
fi

# Assign parameters to variables
PATH_TO_FILE="$1"
IP="$2"
USERNAME="$3"
PATH_TO_SSH_KEY="/root/.ssh/id_rsa"  # Update with correct path

# Check if file exists
if [ ! -f "$PATH_TO_FILE" ]; then
    echo "Error: File '$PATH_TO_FILE' not found."
    exit 1
fi

# SCP transfer command
scp -i "$PATH_TO_SSH_KEY" -o StrictHostKeyChecking=no "$PATH_TO_FILE" "$USERNAME@$IP":~/

# Check SCP exit status
if [ $? -eq 0 ]; then
    echo "File '$PATH_TO_FILE' transferred successfully to $USERNAME@$IP:~/"
else
    echo "Error: Failed to transfer file '$PATH_TO_FILE' to $USERNAME@$IP:~/"
    exit 1
fi

exit 0